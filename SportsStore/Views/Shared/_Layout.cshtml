<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link asp-href-include="lib/bootstrap/dist/**/*.min.css" rel="stylesheet" asp-href-exclude="**.*-reebot*,**.*-grid*" />
    <link rel="stylesheet" asp-href-include="lib/font-awesome/css/*.css" />
    <title>@ViewBag.Title -Store</title>
</head>
<body>

    <nav class="navbar navbar-expand-lg bg-dark navbar-dark" role="navigation">
        <a class="navbar-brand" href="@Url.Content("~/")">Sklep obuwniczy</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    @* @Html.ActionLink("Kontakt", "Contact","Product", new {name="Contact" }, null)*@
                    <a class="nav-link" href="@Url.Action("StronyStatyczne","Product", new {name="Contact" })">Kontakt</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("StronyStatyczne","Product", new {name="Regulations" })">Regulamin</a>
                </li>
            </ul>
            <div>
                @await Component.InvokeAsync("CartSummary")
            </div>
        </div>
    </nav>

    <div class="row m-1 p-1">
        <div id="categories" class="col-3">
            @await Component.InvokeAsync("NavigationMenu")
        </div>

        <div class="col-9">
            @RenderBody()
        </div>
    </div>

    <footer class="page-footer font-small blue pt-4 bottom">
        <div class="footer-copyright text-center py-3">
            Copyright &copy; @DateTime.Now.Year
        </div>

    </footer>
</body>
</html>
